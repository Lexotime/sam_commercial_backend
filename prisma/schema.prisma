// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Designation {
  id       Int       @id @default(autoincrement())
  libelle  String
  articles Article[]
}

model Article {
  id            Int         @id @default(autoincrement())
  numeroArticle String      @unique
  designation   Designation @relation(fields: [designationId], references: [id])
  designationId Int
  marque        String
  prixUnitaire  Int
  stock         Int
  epaisseur     Int
  imageUrl      String
  dimension     String
}

model Commerciaux {
  id       Int    @id @default(autoincrement())
  login    String @unique
  password String
  role     String
}

model Client {
  id        Int    @id @default(autoincrement())
  Nrclient  String
  Nom       String
  Adresse   String
  Ville     String
  Pays      String
  Email     String @unique
  Telephone Int
  Remise    Int
}

model Facture {
  id            Int      @id @default(autoincrement())
  Numerofacture Int      @unique
  Datecreation  DateTime @default(now())
}
